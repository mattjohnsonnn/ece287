module tile_selector(
    input wire clk,
    input wire rst,
    input wire select_key,          // KEY[1]
    input wire [14:0] idx_location, // Current cursor position
    output reg [14:0] selected_pos  // Position of selected tile
);

    always @(posedge clk or posedge rst) begin
        if (rst) begin
            selected_pos <= 15'd0;
        end
        else begin
            if (!select_key) begin  // Active low key
                selected_pos <= idx_location;  // Store current position when KEY[1] pressed
            end
        end
    end
endmodule
